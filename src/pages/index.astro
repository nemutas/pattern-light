---
import CanvasContainer from '../components/CanvasContainer.astro'
import Layout from '../components/Layout.astro'
import Link from '../components/Link.astro'
import Scroller from '../components/Scroller.astro'
---

<Layout title="Demo">
  <main>
    <CanvasContainer />
    <Link class="link" href="https://github.com/nemutas/pattern-light" target="_blank" rel="noopener noreferrer">Github</Link>
    <Scroller />
  </main>
</Layout>

<style lang="scss">
  main {
    width: 100%;
    height: 100%;
  }
  .link {
    position: absolute;
    bottom: 1rem;
    right: 2rem;
  }
</style>
